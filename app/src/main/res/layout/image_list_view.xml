<?xml version="1.0" encoding="utf-8"?>
<TableLayout  xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
>

    <Button android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:id="@+id/switch_frame" android:text="load"/>
    <android.support.v7.widget.RecyclerView
            android:id="@+id/image_list"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            android:layout_weight="1" tools:itemCount="8"
            tools:listitem="@layout/image_list_item" tools:spanCount="5" tools:layoutManager="GridLayoutManager"/>

</TableLayout>